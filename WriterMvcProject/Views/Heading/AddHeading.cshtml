@model EntitiyLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Başlık Ekle</h2>


@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
<div class="form-group">

    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName)
    <br />

    @Html.Label("Kategori ID")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoryvalues, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryID)
    <br />

    @Html.Label("Yazar ID")
    @Html.DropDownListFor(x=>x.WriterID,(List<SelectListItem>)ViewBag.writerlist, new {@class="form-control"})
    @Html.ValidationMessageFor(x => x.WriterID)
    <br />

    <button class="btn btn-outline-success">Kaydet</button>

</div>

}


