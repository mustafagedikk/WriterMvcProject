    @*/////button/////*@
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        // Form submit olduğunda çalışacak kod
        $('#güncelleme').ready(function () {
            $('form').submit(function (e) {
                e.preventDefault(); // Formun default davranışını engelle
                var form = this;
                swal("Tekbrikler!", "Kaydetme işlemi başarılı", "success");
                setTimeout(function () {
                    form.submit(); // 1.5 saniye sonra formu submit et
                }, 1500);
            });
        });
    </script>

    @*////Silme*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        // Sil butonuna tıklandığında SweetAlert ile onay kutusu göster
        document.querySelectorAll('.silme').forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();
                const href = this.getAttribute('href');

                Swal.fire({
                    title: '<span style="font-size: 60%;">Silmek istediğinize emin misiniz?</span>',

                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'İptal',
                    customClass: {
                        popup: 'custom-popup-class'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Silme işlemi gerçekleştir
                        Swal.fire(
                            '<span style="font-size: 65%;">Silme işlemi gerçekleşti!</span>',
                            '',
                            'success'
                        ).then(() => {
                            // Silme işlemi gerçekleştikten sonra href değerine yönlendir
                            window.location.href = href;
                        });
                    }
                });
            });
        });
    </script>



