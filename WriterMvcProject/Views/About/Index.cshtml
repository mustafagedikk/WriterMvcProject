@using EntitiyLayer.Concrete
@model List<About>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda</h2>
<table class="table table-bordered table-hover">

    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetails1</td>
            <td><a href="#" class="btn btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn btn-outline-primary">Güncelle</a></td>
        </tr>

    }

</table>


<button class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1">

    Yeni Hakkımızda Yazı girişi

</button>

@Html.Action("AboutPartial")

